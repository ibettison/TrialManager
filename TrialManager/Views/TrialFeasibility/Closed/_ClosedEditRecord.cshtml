                                    </a>
                                </div>

                                @Html.ValidationMessageFor(model => model.ArchivingPeriod, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.Destruction)
                        </div>
                        <div class="col-md-10">
                            <div class="input-group">
                                @Html.EditorFor(model => model.Destruction, new { htmlAttributes = new { @class = "form-control datepicker", disabled = "disabled" } })
                                <div class="input-group-addon closed">
                                    <a href="#">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </div>

                                @Html.ValidationMessageFor(model => model.Destruction, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    
                </div>
            }

        </div>
        <!-- /.box-body -->
    </div>
</div>
<!-- /.box -->
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
