@model TrialManager.Models.TrialLateDevelopmentModels

@{
    ViewBag.Title = "Active Record";
    ViewBag.ShortName = Model.ShortName.ShortName;
}

<div class="box box-solid box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">View Late Development Record</h3>
        <div class="box-tools pull-right">
            <!-- Buttons, labels, and many other things can be placed here! -->
            <!-- Here is a label for example -->
            <span class="label label-default">View Late...</span>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="col-md-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
    
                <div class="form-horizontal">
                    <h4>Late Development - <span class="text-blue">@ViewBag.ShortName</span></h4>
                    <hr/>
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.ClinicalTrialsGovRef)
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ClinicalTrialsGovRef, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                            @Html.ValidationMessageFor(model => model.ClinicalTrialsGovRef, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.LocalCC)
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LocalCC, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                            @Html.ValidationMessageFor(model => model.LocalCC, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.SponsorGreenLight)
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SponsorGreenLight, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                            @Html.ValidationMessageFor(model => model.SponsorGreenLight, "", new {@class = "text-danger", disabled = "disabled"})
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.SiteInitiationVisit)
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SiteInitiationVisit, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                            @Html.ValidationMessageFor(model => model.SiteInitiationVisit, "", new {@class = "text-danger"})
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-2">
                            @Html.LabelFor(model => model.LocalSiteActivationDate)
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LocalSiteActivationDate, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})

                            @Html.ValidationMessageFor(model => model.LocalSiteActivationDate, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </div>
            }

        </div>
        <!-- /.box-body -->
    </div>
</div>
<!-- /.box -->
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
